{
  "name": "down-node-loader",
  "version": "0.1.1",
  "description": "Download manager running on NodeJS",
  "files": [
    "!lib/__tests__/**/*",
    "lib/**/*",
    "bin/**/*"
  ],
  "bin": {
    "dnl": "./bin/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "lint": "eslint ./src/ --fix",
    "start": "yarn clean && yarn build && node ./bin/index.js",
    "deploy": "yarn clean && yarn build && chmod +x ./bin/index.js && ",
    "release:patch": "yarn version --patch && git push",
    "release:minor": "yarn release --minor && git push --follow-tags",
    "release:major": "yarn release --major && git push --follow-tags",
    "release": "yarn release:patch",
    "dev": "nodemon ./src/app.ts",
    "start:old": "TS_NODE_FILES=true ts-node ./src/cli.ts",
    "prepare": "husky install",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jyjokokk/DownNodeLoader.git"
  },
  "license": "MIT",
  "author": {
    "name": "Jyrki Kokkola",
    "email": "j.j.kokkola@gmail.com",
    "url": "https://github.com/jyjokokk"
  },
  "engines": {
    "node": ">=20.0"
  },
  "keywords": [
    "cli",
    "typescript",
    "manager",
    "downloader"
  ],
  "bugs": {
    "url": "https://github.com/jyjokokk/DownNodeLoader/issues"
  },
  "homepage": "https://github.com/jyjokokk/DownNodeLoader#readme",
  "dependencies": {
    "commander": "^7.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chalk": "^4.1.1",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "execa": "^5.1.1",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^13.2.1",
    "nodemon": "^3.1.9",
    "prettier": "^2.2.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": []
  }
}
